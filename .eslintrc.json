{
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:vue/essential",
    "airbnb",
    "plugin:tailwindcss/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint",
    "tailwindcss"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "require-jsdoc": 0,
    "max-len": [
      "error",
      {
        "ignorePattern": "d=\".*\""
      } // ignore svg paths
    ]
  }
}